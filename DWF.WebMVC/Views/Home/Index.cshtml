@{
    ViewBag.Title = "Home Page";
}

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">

        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}

<div class="jumbotron">
    <h1>Welcome to Darts With Friends! </h1>
    <p class="lead">Click the button below to create a match.</p>
    <p><a href="https://localhost:44364/MatchSetup/Create" class="btn btn-danger btn-lg">Create Match &raquo;</a></p>
</div>

